@model BookingHotel.Models.Enrollment

@{
    ViewData["Title"] = "Details";
    Layout = "_ManagementLayout";
}

<h1>Details</h1>

<div>

    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Tên phòng:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Room.roomName)
        </dd>

        @if (Model != null)
        {
            <dt class="col-sm-2">
                Tên khách hàng:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Account.name)
            </dd>
            <dt class="col-sm-2">
                Số điện thoại khách hàng:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Account.phoneNumber)
            </dd>
            <dt class="col-sm-2">
                Thời gian nhận phòng:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.dateOfReceipt)
            </dd>
        }
        else
        {
            <dt class="col-sm-2">Khách hàng:</dt>
            <dd class="col-sm-10">Không có khách hàng.</dd>
        }
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.roomID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
