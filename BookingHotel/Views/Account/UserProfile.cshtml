@model BookingHotel.Models.AccountViewModels
<div class="hero-wrap" style="background-image: url('@Url.Content("~/templateuser/images/bg_3_coppy.jpg")'); height:100px">
</div>

<style>
    .box {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        background-color: #f8f9fa;
        
    }

    .container1 {
        background-color: #fff;
        padding: 20px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        border-radius: 10px;
        max-width: 800px;
        width: 100%;
        margin-top : 40px;
        margin-bottom: 40px;
    }

    h2 {
        text-align: center;
        margin-bottom: 20px;
        color: #333;
    }

    .form-group {
        margin-bottom: 15px;
    }

    .form-control {
        border: 1px solid #ccc;
        border-radius: 5px;
        padding: 10px;
        width: 100%;
        box-sizing: border-box;
    }

        .form-control:focus {
            border-color: #007bff;
            box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
        }

    .btn-primary {
        background-color: #007bff;
        border: none;
        border-radius: 5px;
        padding: 10px 20px;
        color: #fff;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    .text-danger {
        color: #dc3545;
    }

    .table {
        width: 100%;
        margin-bottom: 1rem;
        color: #212529;
        border-collapse: collapse;
    }

        .table th,
        .table td {
            padding: 1rem;
            vertical-align: top;
            border-top: 1px solid #dee2e6;
        }

        .table thead th {
            vertical-align: bottom;
            border-bottom: 2px solid #dee2e6;
        }

        .table tbody + tbody {
            border-top: 2px solid #dee2e6;
        }
</style>

<div class="box">
<div class="container1">
    <h2>User Profile</h2>
    <div class="row justify-content-center">
        <div class="col-md-12">
            <form asp-action="UserProfile" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Username" />

                <div class="form-group">
                    <label asp-for="Name" class="control-label" ></label>
                        <input asp-for="Name" class="form-control" readonly />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="PhoneNumber" class="control-label"></label>
                        <input asp-for="PhoneNumber" class="form-control" readonly/>
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                <h2>Booking History</h2>
                <table class="table">
                <thead>
                    <tr>
                    <th>Code</th>
                    <th>Check-In Date</th>
                    <th>Check-Out Date</th>
                    <th>Guest Count</th>
                    <th>Room Type</th>
                    <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Requests.Count > 0)
                      {
                         @foreach (var request in Model.Requests){
                             <tr>
                                <td>@request.requestID</td>
                                <td>@request.dateCheckIn.ToString("dd/MM/yyyy")</td>
                                <td>@request.dateCheckOut.ToString("dd/MM/yyyy")</td>
                                <td>@request.guestCount</td>
                                <td>@request.RoomType.roomTypeName</td>
                                <td>@request.status</td>
                             </tr>
                                }
                       }else
                          {
                             <tr>
                                  <td colspan="6" style="text-align:center;">No bookings available</td>
                            </tr>
                          }

                </tbody>
            </table>
               
            </form>
        </div>
    </div>
</div>
</div>