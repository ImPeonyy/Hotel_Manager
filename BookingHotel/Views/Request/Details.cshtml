@model BookingHotel.Models.Request

@{
    ViewData["Title"] = "Request Details";
    Layout = "_ManagementLayout";
}

<h1>Request Details</h1>

<div style="margin-top: 30px; margin-bottom: 30px">
    <h4>Request</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Account.name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Account.name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Account.phoneNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Account.phoneNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.dateCheckIn)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.dateCheckIn)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.dateCheckOut)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.dateCheckOut)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.guestCount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.guestCount)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RoomType.roomTypeName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RoomType.roomTypeName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.message)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.message)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.status)
        </dd>
       
        
    </dl>
    <a asp-action="Index" class="btn btn-info btn-icon">
        <i class="fas fa-list"></i> Back to List
    </a> 
    |
    @if (Model?.status == "Waiting")
    {
        <a asp-action="Approve" asp-route-id="@Model?.requestID" class="btn btn-success btn-icon" onclick="showSuccessMessage()">
            <i class="fas fa-check"></i>
        </a>
        <a asp-action="Cancel" asp-route-id="@Model?.requestID" class="btn btn-danger btn-icon" onclick="showDeleteMessage()">
            <i class="fas fa-times"></i>
        </a>
    }
    
</div>
<script>
    function showSuccessMessage() {
        alert("Yêu cầu đã được duyệt thành công!");
    }
    function showDeleteMessage() {
        alert("Yêu cầu đã được hủy thành công");
    }
</script>
